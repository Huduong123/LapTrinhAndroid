<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header với nút quay lại và tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Nút quay lại -->
            <ImageView
                android:id="@+id/back_button_info"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/baseline_arrow_back_24"
                android:contentDescription="Back"
                android:layout_marginEnd="8dp" />

            <!-- Tiêu đề nằm ở giữa -->
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hồ sơ"
                android:textSize="25sp"
                android:textStyle="bold"
                android:paddingLeft="115dp" />
        </LinearLayout>

        <!-- Khoảng cách giữa header và nội dung -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_background"
            android:text="UserName "
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />
        <TextView
            android:id="@+id/gmail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_background"
            android:text="Gmail "
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />
        <!-- TextView Hiển Thị Tên Người Dùng -->
        <TextView
            android:id="@+id/ho_ten"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_background"
            android:text="Họ và tên "
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <!-- TextView Hiển Thị Số Điện Thoại -->
        <TextView
            android:id="@+id/user_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_background"
            android:text="Số Điện Thoại: "
            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <!-- TextView Hiển Thị Địa Chỉ -->
        <TextView
            android:id="@+id/user_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/border_background"
            android:text="Địa Chỉ: "

            android:textSize="16sp"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <!-- Nút xác nhận -->
        <Button
            android:id="@+id/update_info_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cập nhật hồ sơ"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</LinearLayout>
